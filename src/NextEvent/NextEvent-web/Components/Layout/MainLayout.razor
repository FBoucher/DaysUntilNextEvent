@inherits LayoutComponentBase
@using Microsoft.FluentUI.AspNetCore.Components
@using Microsoft.FluentUI.AspNetCore.Components.Extensions

<FluentLayout>
    <FluentHeader>
        Next Important Date Countdown
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://github.com/FBoucher/DaysUntilNextEvent" target="_blank">GitHub source</a>
        <FluentSpacer />
        <a href="https://bio.site/fboucheros" target="_blank">About Frank</a>
    </FluentFooter>
</FluentLayout>

<FluentToastProvider @rendermode="RenderMode.InteractiveServer" />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    public DesignThemeModes Mode { get; set; }
    public OfficeColor? OfficeColor { get; set; }
}